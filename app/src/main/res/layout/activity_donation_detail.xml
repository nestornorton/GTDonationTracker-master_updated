<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonationDetailActivity">

    <TextView
        android:id="@+id/donation_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:text="Item Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/donation_detail_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Site Name"
        app:layout_constraintStart_toStartOf="@+id/donation_detail_name"
        app:layout_constraintTop_toBottomOf="@+id/donation_detail_type" />

    <TextView
        android:id="@+id/donation_detail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Item Type"
        app:layout_constraintStart_toStartOf="@+id/donation_detail_name"
        app:layout_constraintTop_toBottomOf="@+id/donation_detail_name" />

    <TextView
        android:id="@+id/donation_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Donate Time"
        app:layout_constraintStart_toStartOf="@+id/donation_detail_name"
        app:layout_constraintTop_toBottomOf="@+id/donation_detail_addr" />


</android.support.constraint.ConstraintLayout>